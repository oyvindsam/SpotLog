<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarTheme">@style/AppActionBar</item>
        <item name="snackbarStyle">@style/AppSnackBarStyle</item>
        <item name="snackbarTextViewStyle">@style/AppSnackText</item>
        <item name="snackbarButtonStyle">@style/AppSnackButton</item>

        <item name="materialAlertDialogTheme">@style/AppDialog</item>
        <item name="alertDialogTheme">@style/AppDialog</item>

        <item name="colorListItemSecondary">#DDDDDD</item>

    </style>



    <style name="AppActionBar" parent="ThemeOverlay.MaterialComponents.Dark">
    </style>

    <style name="AppSnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="AppSnackText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppSnackButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


</resources>